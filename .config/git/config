[alias]
	cm = commit --message
	st = status --short
	patch = add --patch
	amend = commit --amend
	last = log -1 HEAD
	lastmsg = commit --amend --message
	ignore-changes = update-index --assume-unchanged

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

