# Import other configuration files
include $XDG_CONFIG_HOME/i3/*.conf

# Variables
set $LAUNCHER rofi -show drun -theme $XDG_CONFIG_HOME/rofi/themes/nord/nord.rasi
set $CLIPBOARD exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard -theme $XDG_CONFIG_HOME/rofi/themes/nord/nord.rasi -run-command '{cmd}'
set $FILES ranger
set $STARTUP_SOUND $HOME/Music/win95-startup.wav

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Mod key (leader)
set $mod Mod4

# Modifier to move floating windows
floating_modifier $mod

# Disable focus follow mouse
focus_follows_mouse no

# Show popup windows in fullscreen
popup_during_fullscreen smart

# Auto back-and-forth (go back to last workspace using the same binding)
workspace_auto_back_and_forth yes

# Enable floating mode for some windows
# for_window [title="galculator"] floating enable
