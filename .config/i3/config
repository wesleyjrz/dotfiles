#################
### Variables ###
#################

# Mod key
set $mod Mod4

# Variables
set $LAUNCHER rofi -show drun -theme $XDG_CONFIG_HOME/rofi/themes/nord/nord.rasi
set $CLIPBOARD exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard -theme $XDG_CONFIG_HOME/rofi/themes/nord/nord.rasi -run-command '{cmd}'
set $FILES ranger
set $MAIL neomutt
set $STARTUP_SOUND $HOME/Music/win95-startup.wav

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "0"

######################
### Style settings ###
######################

# Font
font pango:JetBrains Mono 10

# Window decorations
title_align center
default_border pixel 2

# Window colours
# class                 border  back.   text    indicator
client.focused          #4c566a #4c5660 #eceff4 #4c5660
client.unfocused        #2e3440 #2e3440 #888888 #2e3440
client.focused_inactive #2e3440 #2e3440 #888888 #2e3440
client.placeholder      #2e3440 #2e3440 #888888 #2e3440
client.urgent           #bf616a #bf616a #eceff4 #bf616a

client.background       #2e3440

# Gaps
gaps inner 8
gaps outer 0

############
### Misc ###
############

# Modifier to move floating windows
floating_modifier $mod

# Disable focus follow mouse
focus_follows_mouse no

# Enable floating mode for some windows
# for_window [title="galculator"] floating enable

###################
### Keybindings ###
###################

# Terminal
bindsym $mod+Return exec $TERMINAL

# Application launcher
bindsym $mod+d exec --no-startup-id $LAUNCHER

# Text editor
bindsym $mod+e exec $TERMINAL -e $EDITOR

# File manager
bindsym $mod+Shift+f exec $TERMINAL -e $FILES

# Web browser
bindsym $mod+w exec $BROWSER

# Mail
bindsym $mod+m exec $TERMINAL -e $MAIL

# Clipboard
bindsym $mod+c $CLIPBOARD

# Lock screen
bindsym $mod+Shift+q \
exec --no-startup-id i3lock-fancy-rapid 2 4

# Use pactl to adjust volume in PulseAudio
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Take screenshots
mode "  Screenshot" {
	# Capture the entire screen
	bindsym s \
	exec --no-startup-id maim $HOME/Pictures/screenshots/screenshot-$(date +%Y%m%d-%H%M%S).png

	# Select/Crop a region of the screen to capture
	bindsym c \
	exec --no-startup-id maim --select $HOME/Pictures/screenshots/screenshot-$(date +%Y%m%d-%H%M%S).png

	# Capture the current window (Without decorations and transparency)
	bindsym w \
	exec --no-startup-id maim --window=$(xdotool getactivewindow) $HOME/Pictures/screenshots/screenshot-$(date +%Y%m%d-%H%M%S).png

	# Back to normal: Enter, Escape or $mod+r
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+s mode "default"
}

# Switch to screenshot mode
bindsym $mod+s mode "  Screenshot"

# Kill focused window
bindsym $mod+q kill

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split in horizontal orientation
bindsym $mod+v split h

# Split in vertical orientation
bindsym $mod+n split v

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Toggle between splith/tabbed/splitv
bindsym $mod+t layout toggle splith tabbed splitv

# Toggle tiling/floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling/floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session and restart i3)
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e \
exec "i3-nagbar --type warning --message 'Will you join the dark side?' --button-no-terminal 'Yes, go dark!' 'i3-msg exit'"

# Resize window (there's mouse support too)
mode " Resize" {
	# Shrink the window's width
	bindsym h resize shrink width 10 px or 10 ppt
	# Grow the window's height
	bindsym j resize grow height 10 px or 10 ppt
	# Shrink the window's height
	bindsym k resize shrink height 10 px or 10 ppt
	# Grow the window's width
	bindsym l resize grow width 10 px or 10 ppt

	# Back to normal: Enter, Escape or $mod+r
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}

# Switch to resize mode
bindsym $mod+r mode " Resize"

#################
### Autostart ###
#################

# Workspace bar
exec_always --no-startup-id \
$HOME/.config/polybar/launch.sh

# Alternating layout script
exec_always --no-startup-id \
$HOME/.config/i3/alternating_layouts.py

# Startup sound
exec --no-startup-id \
mpv --no-video $STARTUP_SOUND
